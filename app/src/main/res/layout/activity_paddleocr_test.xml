<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_beige">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PaddleOCR Test"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Real OCR Test Buttons -->
    <Button
        android:id="@+id/btnTestOCR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🔍 OCR Test 1: Chinese Character"
        android:textSize="16sp"
        android:backgroundTint="@color/red_primary"
        android:textColor="@color/white"
        android:layout_marginBottom="8dp" />
        
    <Button
        android:id="@+id/btnTestOCR2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📋 OCR Test 2: Restaurant Menu"
        android:textSize="16sp"
        android:backgroundTint="@color/accent_gold"
        android:textColor="@color/white"
        android:layout_marginBottom="8dp" />
        
    <Button
        android:id="@+id/btnTestOCR3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🚦 OCR Test 3: Street Sign"
        android:textSize="16sp"
        android:backgroundTint="@color/text_primary"
        android:textColor="@color/white"
        android:layout_marginBottom="24dp" />

    <!-- Result Display -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click 'Test PaddleOCR' to test the integration"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:lineSpacingExtra="4dp"
            android:padding="16dp"
            android:background="@color/background_card"
            android:layout_margin="8dp" />

    </ScrollView>

    <!-- Instructions -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🔍 REAL OCR TESTING:\n\n1. 🔍 Test 1: Recognizes Chinese characters in chinese_character.jpg\n2. 📋 Test 2: Extracts text from restaurant menu (sample1.jpg)\n3. 🚦 Test 3: Reads street sign text (IMG_3849.JPG)\n\n⚠️ REQUIRES: Real PaddleOCR API server running!"
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        android:background="@color/accent_gold"
        android:padding="12dp"
        android:layout_marginTop="16dp" />

</LinearLayout>
